# TeleHook Configuration
# Copy this file to .env and customize for your environment

# API Security
TELEHOOK_API_KEY="YOUR_API_KEY"

# Trust forwarded headers (enable for reverse proxy setups or direct internet exposure)
TRUST_FORWARDED_HEADERS=false

# Port Configuration
FRONTEND_PORT=3000
BACKEND_PORT=5001

# Database
DATABASE_PATH=/data/telehook.db

# Logging
LOG_LEVEL=Warning
LOG_RETENTION_DAYS=7

# Frontend Configuration
NEXTAUTH_URL="FRONTEND_URL"
NEXTAUTH_SECRET="CHANGE_THIS_SECRET"
BACKEND_URL=http://localhost:8080

# OIDC Configuration (optional - uncomment to enable SSO)
#OIDC_WELL_KNOWN_URL="YOUR_OIDC_WELL_KNOWN_URL"
#OIDC_CLIENT_ID="YOUR_OIDC_CLIENT_ID"
#OIDC_CLIENT_SECRET="YOUR_OIDC_SECRET"
#OIDC_PROVIDER_NAME="YOUR_PROVIDER"
